//
//  LoginView.swift

import SwiftUI

struct LoginView: View {
    @State private var username: String = ""
    @State private var password: String = ""
    @State private var showStoreNumberView = false
    @State private var showAlert = false
    
    // Hardcoded credentials
    private let validUsername = "admin"
    private let validPassword = "admin"
    
    var body: some View {
        NavigationView {
            ZStack {
                // Background color to match screenshot
                Color(white: 0.95)
                    .ignoresSafeArea()
                
                VStack(spacing: 30) {
                    Spacer()
                    
                    // App title
                    Text("Compass Vision")
                        .font(.system(size: 28, weight: .bold))
                        .padding(.bottom, 40)
                    
                    // Username field
                    VStack(alignment: .leading, spacing: 8) {
                        Text("Username")
                            .font(.system(size: 16))
                        
                        TextField("", text: $username)
                            .padding()
                            .frame(height: 56)
                            .background(Color.white)
                            .overlay(
                                RoundedRectangle(cornerRadius: 4)
                                    .stroke(Color.black, lineWidth: 1)
                            )
                    }
                    
                    // Password field
                    VStack(alignment: .leading, spacing: 8) {
                        Text("Password")
                            .font(.system(size: 16))
                        
                        SecureField("", text: $password)
                            .padding()
                            .frame(height: 56)
                            .background(Color.white)
                            .overlay(
                                RoundedRectangle(cornerRadius: 4)
                                    .stroke(Color.black, lineWidth: 1)
                            )
                    }
                    
                    // Continue button
                    Button(action: {
                        if username == validUsername && password == validPassword {
                            showStoreNumberView = true
                        } else {
                            showAlert = true
                        }
                    }) {
                        Text("Continue")
                            .font(.system(size: 16, weight: .semibold))
                            .foregroundColor(.white)
                            .frame(maxWidth: .infinity)
                            .frame(height: 56)
                            .background(Color(red: 0.08, green: 0.18, blue: 0.56))
                            .cornerRadius(28)
                    }
                    
                    Spacer()
                    
                    // Navigation link to store number view (hidden)
                    NavigationLink(destination: StoreNumberView().navigationBarHidden(true), isActive: $showStoreNumberView) {
                        EmptyView()
                    }
                }
                .padding(.horizontal, 30)
            }
            .navigationBarHidden(true) // Hide the navigation bar
            .alert(isPresented: $showAlert) {
                Alert(
                    title: Text("Error"),
                    message: Text("Invalid username or password"),
                    dismissButton: .default(Text("OK"))
                )
            }
        }
        .navigationViewStyle(StackNavigationViewStyle())
    }
}
