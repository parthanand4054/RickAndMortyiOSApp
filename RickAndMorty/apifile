
// LoginView.swift
import SwiftUI

struct LoginView: View {
    @State private var username = ""
    @State private var password = ""
    var onLoginSuccess: () -> Void

    var body: some View {
        VStack(spacing: 32) {
            HStack {
                Text("Sign in")
                    .font(.headline)
                Spacer()
            }
            .padding(.horizontal)

            Spacer()

            Text("Compass Vision")
                .font(.largeTitle)
                .bold()

            Spacer()

            VStack(alignment: .leading, spacing: 16) {
                Text("Username")
                    .font(.caption)
                TextField("", text: $username)
                    .textFieldStyle(RoundedBorderTextFieldStyle())

                Text("Password")
                    .font(.caption)
                SecureField("", text: $password)
                    .textFieldStyle(RoundedBorderTextFieldStyle())
            }
            .padding(.horizontal)

            Button(action: {
                if username == "admin" && password == "admin" {
                    onLoginSuccess()
                }
            }) {
                Text("Continue")
                    .frame(maxWidth: .infinity)
                    .padding()
                    .background(Color.blue)
                    .foregroundColor(.white)
                    .cornerRadius(25)
            }
            .padding(.horizontal)

            Spacer()
        }
    }
}


// StoreNumberView.swift
import SwiftUI

struct StoreNumberView: View {
    @State private var storeInput = ""
    var onStoreSelected: (Int) -> Void

    // Hardcoded valid store numbers
    private let validStores = [100, 200]

    var body: some View {
        VStack(spacing: 32) {
            HStack {
                Text("Enter store number")
                    .font(.headline)
                Spacer()
            }
            .padding(.horizontal)

            Spacer()

            Text("Compass Vision")
                .font(.largeTitle)
                .bold()

            Spacer()

            VStack(alignment: .leading, spacing: 16) {
                Text("Store Number")
                    .font(.caption)
                TextField("", text: $storeInput)
                    .keyboardType(.numberPad)
                    .textFieldStyle(RoundedBorderTextFieldStyle())
            }
            .padding(.horizontal)

            Button(action: {
                if let num = Int(storeInput), validStores.contains(num) {
                    onStoreSelected(num)
                }
            }) {
                Text("Submit")
                    .frame(maxWidth: .infinity)
                    .padding()
                    .background(Color.blue)
                    .foregroundColor(.white)
                    .cornerRadius(25)
            }
            .padding(.horizontal)

            Spacer()
        }
    }
}
